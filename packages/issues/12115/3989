@@ -277,6 +281,36 @@
 			}
 		}
 
+		/// <summary>
+		/// Returns the result of merging two <see cref="Trigger"/> objects. The once/daily/weekly/monthly schedule is copied from one of the objects, and the other properties from the other.
+		/// </summary>
+		/// <param name="otherProperties">The source of other properties.</param>
+		/// <param name="schedule">The source of the schedule.</param>
+		/// <returns></returns>
+		private static Trigger TriggerMergeSchedule(Trigger otherProperties, Trigger schedule)
+		{
+			if (!(schedule.GetType() == typeof(TimeTrigger)
+				|| schedule.GetType() == typeof(DailyTrigger)
+				|| schedule.GetType() == typeof(WeeklyTrigger)
+				|| schedule.GetType() == typeof(MonthlyTrigger) || schedule.GetType() == typeof(MonthlyDOWTrigger)))
+			{
+				throw new ArgumentOutOfRangeException("schedule");
+			}
+
+			DateTime startBoundary = schedule.StartBoundary;
+			Trigger merged = schedule.Clone() as Trigger;
+			if (otherProperties != null)
+				merged.CopyBaseClassProperties(otherProperties);
+			if (otherProperties is ITriggerDelay && merged is ITriggerDelay)
+				try { ((ITriggerDelay)merged).Delay = ((ITriggerDelay)otherProperties).Delay; }
+				catch { }
+			if (otherProperties is ITriggerUserId && merged is ITriggerUserId)
+				try { ((ITriggerUserId)merged).UserId = ((ITriggerUserId)otherProperties).UserId; }
+				catch { }
+			merged.StartBoundary = startBoundary;
+			return merged;
+		}
+
