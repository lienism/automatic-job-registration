 		{
 			get
 			{
+				if (trigger == null)
+					return null;
+				switch (trigger.TriggerType)
+				{
+					case TaskTriggerType.Time:
+					case TaskTriggerType.Daily:
+					case TaskTriggerType.Weekly:
+					case TaskTriggerType.Monthly:
+					case TaskTriggerType.MonthlyDOW:
+						// ScheduledTriggerUI doesn't mutate the Trigger we assigned to it, just like we don't
+						// mutate the Trigger assigned to us.  So we have to merge ScheduledTriggerUI's output
+						// Trigger into our Trigger.
+						trigger = TriggerMergeSchedule(otherProperties: trigger, schedule: scheduledTriggerUI1.Trigger);
+						break;
+				}
 				return trigger;
 			}
